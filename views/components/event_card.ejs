                    <span class="text-md font-thin text-violet"><%- dates %></span><br/>
                </div>
                <div>
                    <span class="text-sm text-neutral font-semibold opacity-80"><%= Events[i].Venue %></span>
                </div>

            </div>

        </div>
    </a>
    <% } %>
    <% } %>


</div>

