            <div>
                <img src=<%= Events[i].img %> alt="" class="rounded-md">
            </div>
            <!-- Events Discription -->
            <div class="p-2">
                <div>
                    <span class="text-lg font-normal">
                        <% let naam = Events[i].Title + " - " + Events[i].Organsiation %>
