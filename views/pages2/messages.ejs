    <script>
         const MenuShowBtn = document.querySelector('#MenuShowBtn');
        const MobileMenu = document.querySelector('#MobileMenu');
        const MenuCloseBtn = document.querySelector('#MenuCloseBtn');


        MenuShowBtn.addEventListener('click',disMenu);
        MenuCloseBtn.addEventListener('click',hideMenu)
        
        function disMenu(){
            MobileMenu.classList.toggle('hidden');
        }

        function hideMenu(){
            MobileMenu.classList.toggle('hidden');
        }



        //toggle offline/online users

        const online = document.getElementById('online')
        const offline = document.getElementById('offline')

        const prf_online = document.getElementById('profile-online')
        const prf_offline = document.getElementById('profile-offline')


        function Offline(){
            prf_offline.classList.remove('hidden')
            prf_online.classList.add('hidden')
            offline.style.color = 'rgb(124 58 237)'
            online.style.color = 'black'
        }

        function Online(){
            prf_offline.classList.add('hidden')
            prf_online.classList.remove('hidden')
            online.style.color = 'rgb(124 58 237)'
            offline.style.color = 'black'
        }

            

