            <section class="grid gap-y-8 grid-cols-1 lg:grid-cols-2 mt-8 text-white ">
                <div class="lg:w-3/4 flex flex-col text-center lg:text-start">
                    <div>
                        <span class="text-6xl font-bold"> <%= EventData.Title  %></span>
                    </div>

